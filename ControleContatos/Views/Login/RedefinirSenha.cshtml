@model RedefinirSenhaModel
@{
    Layout = "_LayoutDeslogada";
    ViewData["Title"] = "Redefinir a Senha";
}
    @if (TempData["MensagemSucesso"] != null)
    {
    <div class="alert alert-success" role="alert">
        <button type="button" class="btn btn-success btn-sm close-alert" arial-label="Close">x</button>
        @TempData["MensagemSucesso"]
    </div>    
    }
@if (TempData["MensagemErro"] != null)
{
  <div class="alert alert-danger" role="alert">
     <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">x</button>
     @TempData["MensagemErro"]
  </div>    
}
<form asp-controller="Login" asp-action="EnviarLinkParaRedefinirSenha" method="post">
  <div class="mb-3">
    <label for="login" class="form-label">Login</label>
    <input asp-for="Login" type="text" class="form-control" id="login">
    @Html.ValidationMessageFor(x => x.Login)
  </div>
  <div class="mb-3">
    <label for="email" class="form-label">E-mail</label>
    <input asp-for="Email" type="email" class="form-control" id="email">
    @Html.ValidationMessageFor(x => x.Email)
  </div>

  <button type="submit" class="btn btn-primary btn-block">Redefinir Senha</button>
  <a class="btn btn-secondary btn-block" asp-controller="Login" asp-action="index" role="button">Voltar</a>
</form>